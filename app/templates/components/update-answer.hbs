{{#if updateAnswerForm}}
<h1>Update {{answer.name}}</h1>
<div>
  <form>
    <div class="form-group">
      <label for="name">Name</label>
      {{input value=name id="name" placeholder=answer.name}}
    </div>
    <div class="form-group">
      <label for="answer">Answer</label>
      {{input value=answer id="answer" placeholder=answer.answer}}
    </div>
    <button {{action 'update'}}>Save</button>
  </form>
</div>
{{else}}
<button {{action 'updateAnswerForm'}}>Update</button>
{{/if}}
