{{#if addNewHelper}}
  <h1>New Helper</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="name">Helper Name</label>
        {{input value=name id="name"}}
      </div>

      <div class="form-group">
        <label for="question">Question</label>
        {{input value=question id="question"}}
      </div>

      <button {{action 'saveHelper'}}>Save</button>
    </form>
  </div>
{{else}}
<button {{action 'helperFormShow'}}>New Helper</button>
{{/if}}
