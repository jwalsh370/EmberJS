
{{helper-details helper=model destroyHelper="destroyHelper"}}

{{update-helper helper=model updateHelper="updateHelper"}}<hr>



{{new-answer saveAnswer="saveAnswer" helper=model}}


{{#if model.answers}}
  <h2>Answers</h2>
  <hr>
  <ol>
    {{#each model.answers as |answer|}}
      <li>{{answer.newName}} says:<hr>
        <br>
        {{answer.newAnswer}}
        <br>
        <hr>
      </li>
    {{/each}}
  </ol>
{{/if}}
