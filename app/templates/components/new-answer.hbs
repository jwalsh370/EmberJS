{{#if addNewAnswer}}
<h1>New Answer</h1>
<div>
  <form>
    <div class="form-group">
      <label for="newName">Name</label>
      {{input value=newName id="newName"}}
    </div>
    <div class="form-group">
      <label for="newAnswer"> Answer</label>
      {{textarea class="form-control"  value=newAnswer id="newAnswer"}}
    </div>
    <button {{action 'saveAnswer'}}>Save</button>
  </form>
</div>
{{else}}
<button {{action 'answerFormShow'}}>New Answer</button>
{{/if}}
